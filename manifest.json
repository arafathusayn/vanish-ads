{
  "manifest_version": 2,
  "name": "Vanish Ads",
  "short_name": "vanish-ads",
  "version": "1.0.0",

  "description": "A browser extension to remove complex advertisements from some popular websites, especially from social media.",

  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "js": ["f.js"],
			"run_at": "document_start"
    },
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": ["t.js"],
			"run_at": "document_start"
    },
    {
      "matches": [
        "https://*.google.com/*"
      ],
      "js": ["g.js"],
			"run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "icons": {
    "128": "icon.png"
  }

}